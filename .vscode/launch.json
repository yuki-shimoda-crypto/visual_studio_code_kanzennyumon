{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"name": "C ++ Launch",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/a.out",// 必須
			"args": [],
			// "environment": [{ "name": "config", "value": "Debug" }], プログラムの環境に追加する環境変数。
			"cwd": "${workspaceFolder}",// デバッガーによって起動されるアプリケーションの作業ディレクトリを設定します。

			
			"stopAtEntry": false, //default
			"setupCommands": [// よくわからん
				{
					"description": "Enable pretty-printing for gdb",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			],
			"launchCompleteCommand": "exec-run", //default


			"linux": {
				"MIMode": "gdb",//VSCodeが接続するデバッガーを示します
				"miDebuggerPath": "/usr/bin/gdb"
			},
			"osx": {
				"MIMode": "lldb"
			},
			"windows": {
				"MIMode": "gdb",
				// "miDebuggerPath": "C:\\MinGw\\bin\\gdb.exe"
				"miDebuggerPath": "C:\\Program Files\\mingw64\\bin\\gdb.exe"
			},

			"externalConsole": false,
			"preLaunchTask": "C/C++: gcc-9 build active file"
		  }
	]
}



